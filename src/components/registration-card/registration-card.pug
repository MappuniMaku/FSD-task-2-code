.registration-card
    h1.registration-card__title.text-block_text-style_h1-title Регистрация аккаунта
    form(method="post").registration-card__form
        +text-field("text", "user_name", "Имя")
        +text-field("text", "user_surname", "Фамилия")
        +radio-buttons(["Мужчина", "Женщина"], "gender", ["man", "woman"], [true, false])
        +date-picker("Дата рождения", "", "birth_date")
        +element-name("Данные для входа в сервис")
        +text-field("email", "user_email", "Email")
        +text-field("password", "user_password", "Пароль")
        +toggle-button("Получать спецпредложения", "special_offers", "get", false)
        +submit-button("перейти к оплате")
    .login-block
        p.login-block__text Уже есть аккаунт на Toxin
        +link-button("войти", "signin.html", "white", false)
        