include ../element-name/element-name.pug

mixin guests-quantity-dropdown(desc, comment)
    .guests-quantity-dropdown
        +element-name(desc, comment)
        .iqdropdown
            p.iqdropdown-selection
            .iqdropdown-menu
                .iqdropdown-menu-option(data-id="adults" data-defaultcount="2")
                    +element-name("взрослые").iqdropdown-item

                .iqdropdown-menu-option(data-id="children" data-defaultcount="1")
                    +element-name("дети").iqdropdown-item

                .iqdropdown-menu-option(data-id="infants")
                    +element-name("младенцы").iqdropdown-item
                .iqdropdown-menu-option    
                    .action-buttons
                        button.clear-button Очистить
                        button.apply-button Применить